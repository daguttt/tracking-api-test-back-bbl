{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"baseUrl": "./src",
		"experimentalDecorators": true,
		"paths": {
			"@modules/*": ["modules/*"],
			"@db/*": ["db/*"],
			"@lib/*": ["lib/*"],
			"@/*": ["*"]
		}
	},
	"include": ["src", "worker-configuration.d.ts"]
}
