{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@db/*": ["db/*"],
      "@/*": ["*"]
    }
  },
  "exclude": ["node_modules"]
}
